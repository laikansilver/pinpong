<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="center" prefHeight="206.0" prefWidth="297.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.whatsapp.HelloController">
    <children>
        <Label text="¿Cual es tu nombre?" />
        <TextField fx:id="nameField" />
      <VBox prefHeight="66.0" prefWidth="150.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <VBox prefHeight="66.0" prefWidth="148.0">
                     <children>
                          <Label text="Ingresa la dirección IP." />
                          <TextField fx:id="ipField" prefHeight="26.0" prefWidth="143.0" />
                     </children>
                  </VBox>
                  <VBox prefHeight="66.0" prefWidth="42.0" />
                  <VBox prefHeight="66.0" prefWidth="117.0">
                     <children>
                          <Label text="Ingresa el puerto" />
                          <TextField fx:id="portField" prefHeight="26.0" prefWidth="67.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
      </VBox>
        <Button onAction="#connect" text="Comenzar" />
    </children>
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
</VBox>
